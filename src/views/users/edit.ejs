<section class="mid-container">
    <h2 class="title-h2">
        <%=title%>
    </h2>
    <form id="userForm" name="edit-user" action="/edit/<%= user.id %>?_method=PUT" method="POST"
        enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= user.id %>">

        <div class="form-group">
            <p class="label-users">Nombre:</p>
            <input class="form-input" type="text" name="name" id="name" placeholder="Nombre"
                value="<%= user ? user.name : '' %>" required>
        </div>

        <div class="form-group">
            <p class="label-users">Apellido:</p>
            <input class="form-input" type="text" name="lastname" id="lastname" placeholder="Apellido"
                value="<%= user ? user.lastname : '' %>" required>
        </div>

        <div class="form-group">
            <p class="label-users">Categoría:</p>
            <select class="form-input" name="type" id="type" required>
                <option value="">Selecciona una categoría</option>
                <% userTypes.forEach(function(type) { %>
                    <option value="<%= type %>" <%=user && user.type===type ? 'selected' : '' %>>
                        <%= type %>
                    </option>
                    <% }); %>
            </select>
        </div>

        <% if (user && user.avatar) { %>
            <div class="form-group">
                <p class="label-users">Imagen actual:</p>
                <img src="/images/users/<%= user.avatar || 'default-avatar.svg' %>" alt="<%= user.name %>"
                    style="max-width: 150px; max-height: 150px; margin-bottom: 10px;margin-left: 25px;">
            </div>
            <% } %>



                <div class="form-group">
                    <p class="label-users">Nueva imagen (opcional):</p>
                    <input class="form-input" type="file" name="avatar" id="avatar" accept="image/*">
                    <small style="font-size: xx-small;">Deja vacío si no quieres cambiar la imagen</small>
                </div>

                <div class="button-container">
                    <a href="/profile" class="btn-reset">Volver</a>
                    <button type="submit" class="btn-info" style="font-size: 16px;">Guardar</button>
                </div>
    </form>
</section>