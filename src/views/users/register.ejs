<section class="sml-container">
  <h2 class="title-h2">
    <%=title%>
  </h2>
  <form id="registerForm" action="/register" method="POST" enctype="multipart/form-data">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" value="<%= locals.olds && olds.name ? olds.name : '' %>">
    <% if (locals.errors && errors.name) { %>
      <span>
        <%= errors.name.msg %>
      </span>
      <% } %>

        <label for="lastname">Apellido:</label>
        <input type="text" id="lastname" name="lastname"
          value="<%= locals.olds && olds.lastname ? olds.lastname : '' %>">
        <% if (locals.errors && errors.lastname) { %>
          <span>
            <%= errors.lastname.msg %>
          </span>
          <% } %>

            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" value="<%= locals.olds && olds.email ? olds.email : '' %>">
            <% if (locals.errors && errors.email) { %>
              <span>
                <%= errors.email.msg %>
              </span>
              <% } %>


                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required minlength="6">
                <% if (locals.errors && errors.password) { %>
                  <span>
                    <%= errors.password.msg %>
                  </span>
                  <% } %>

                    <label for="confirmPassword">Confirmar contraseña:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                    <% if (locals.errors && errors.confirmPassword) { %>
                      <span>
                        <%= errors.confirmPassword.msg %>
                      </span>
                      <% } %>

                        <label for="avatar">Imagen de perfil:</label>
                        <input class="form-input" type="file" name="avatar" id="avatar" accept="image/*">

                        <button type="submit">Registrarse</button>
                        <p id="registerError" class="error-message"></p>
                        <p id="registerSuccess" class="success-message"></p>
  </form>
</section>